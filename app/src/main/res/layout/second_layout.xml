<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImg"
                android:layout_width="@dimen/iv1W"
                android:layout_height="@dimen/iv1W"
                android:layout_marginTop="@dimen/mTop"
                android:padding="@dimen/iv1Padding"
                android:src="@drawable/image12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lLayoutMtop"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mLeft"
                        android:layout_marginTop="@dimen/tv3Mtop"
                        android:padding="@dimen/iv1Padding"
                        android:text="@string/tv3Txt"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/txtSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvGame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mLeft"
                        android:layout_marginRight="@dimen/mRight"
                        android:layout_marginTop="@dimen/tv3Mtop"
                        android:padding="@dimen/iv1Padding"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/txtSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mLeft"
                        android:layout_marginTop="@dimen/tv3Mtop"
                        android:padding="@dimen/iv1Padding"
                        android:text="@string/tvVersionTxt"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/txtSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mLeft"
                        android:layout_marginRight="@dimen/mRight"
                        android:layout_marginTop="@dimen/tv3Mtop"
                        android:padding="@dimen/iv1Padding"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/txtSize" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v1H"
            android:layout_marginTop="@dimen/mTop"
            android:background="@color/v1BackColor" />

    </LinearLayout>

</LinearLayout>
